@using IDB.Navigator.Resources

@model IDB.Navigator.Site.Areas.Admin.Models.Person.PersonModel
@{
    ViewBag.Title = "View Person";
}

<div class="row">
    <div class="col-lg-12">
        <form action="#" method="post" class="form-horizontal form-validate" role="form">
            <section class="panel col-lg-6">
                <header class="panel-heading">View Person</header>
                <div class="panel-body">
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group">
                        @Html.LabelFor(m => m.AccountName, PropertyNames.AccountName, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-9">
                            <p class="form-control-static" data-bind="text: data.accountName"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-9">
                            <p class="form-control-static" data-bind="text: data.firstName"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.LastName, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-9">
                            <p class="form-control-static" data-bind="text: data.lastName"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DisplayName, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-9">
                            <p class="form-control-static" data-bind="text: data.displayName"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.MarkerId, "Office", new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-9">
                            <p class="form-control-static" data-bind="text: officeNumber"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-9">
                            <p class="form-control-static" data-bind="text: data.phoneNumber"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Department, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-9">
                            <p class="form-control-static" data-bind="text: data.department"></p>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Division, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-9">
                            <p class="form-control-static" data-bind="text: data.division"></p>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <a href="@Url.Action("Index")" class="btn btn-default">Return</a>
                        </div>
                    </div>
                </div>

            </section>
            <section class="panel col-lg-6">
                <header class="panel-heading">Image</header>
                <div class="panel-body">
                    <div class="form-group" data-bind="attr: { style: 'height:200px;background:url(' + data.imagePath() + ') no-repeat center center;' }">
                    </div>
                </div>
            </section>
        </form>

    </div>
</div>

@section styles {
}

@section scripts {
    <script type="text/javascript" src="~/Scripts/navigator/models.js"></script>
    <script type="text/javascript" src="~/Scripts/navigator/personView.js"></script>
}
