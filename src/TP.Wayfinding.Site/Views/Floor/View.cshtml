@model TP.Wayfinding.Site.Models.Floor.EditFloorModel

@{
    ViewBag.Title = "View Floor";
}

<div class="row">
    <div class="col-lg-12">
        <form action="#" method="post" class="form-horizontal form-validate" role="form">
            <section class="panel col-lg-12">
                <header class="panel-heading">View Floor</header>
                <div class="panel-body">
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group">
                        @Html.LabelFor(m => m.Floor, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            <p class="form-control-static" data-bind="text: data.floor"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            <p class="form-control-static" data-bind="text: data.description"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Map</label>
                        <div class="col-sm-10">
                            <div id="map"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <a class="btn btn-default" data-bind="attr: { href: '/Floor/?buildingId=' + data.buildingId() }">Return</a>
                        </div>
                    </div>
                </div>
            </section>
        </form>
    </div>
</div>

@section styles {
    <link type="text/css" rel="stylesheet" href="~/Content/uploader.css">
    <link type="text/css" rel="stylesheet" href="~/Content/tiler.css">
}

@section scripts {
    <script type="text/javascript" src="https://maps.google.com/maps/api/js?sensor=true&libraries=places"></script>
    <script type="text/javascript" src="~/Scripts/wayfinding/models.js"></script>
    <script type="text/javascript" src="~/Scripts/wayfinding/floor.js"></script>
}

