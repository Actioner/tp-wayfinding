@{
    ViewBag.Title = "Floor List";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">Floor List</header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>Floor</th>
                        <th>Description</th>
                        <th>Image Path</th>
                        <th><i class="icon_cogs"></i>Action</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: currentData">
                    <tr>
                        <td data-bind="text: floor"></td>
                        <td data-bind="text: description"></td>
                        <td data-bind="text: imagePath"></td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary" data-bind="attr: { href: '/Floor/Create?buildingId=' + $data.buildingId() }"><i class="icon_plus_alt2"></i></a>
                                <a class="btn btn-success" data-bind="attr: { href: '/Floor/View/' + $data.id() }"><i class="icon_check_alt2"></i></a>
                                <a class="btn btn-danger" data-toggle="modal" href="#deleteConfirm" data-bind="attr: { 'data-deleteurl': '/api/Floor/' + $data.id() }"><i class="icon_close_alt2"></i></a>
                            </div>
                        </td>
                    </tr>

                </tbody>
            </table>
        </section>
    </div>
</div>

@section scripts 
{
    <script type="text/javascript" src="~/Scripts/modal/deleteConfirm.js"></script>
    <script type="text/javascript">
        function ViewModel() {
            var self = this;
            self.buildingId = ko.observable($.QueryString["buildingId"]);
            self.currentData = ko.observableArray([]);
        }

        $(function () {
            var deleteConfirm = new DeleteConfirm('Delete Floor');

            var getModels = function () {
                loading.show();
                $.getJSON('/api/floor?buildingid=' + vm.buildingId(), {
                    returnformat: 'json'
                }, function (data) {
                    ko.mapping.fromJS(data, {}, vm.currentData);
                    loading.hide();
                });
            };

            deleteConfirm.onConfirm = getModels;

            var vm = new ViewModel();
            ko.applyBindings(vm);

            getModels();
        });
    </script>
}

@section dialogs
{
    @Html.Partial("Modal/_DeleteConfirm")
}

