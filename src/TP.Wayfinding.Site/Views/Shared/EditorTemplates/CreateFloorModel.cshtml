@using TP.Wayfinding.Resources
@using TP.Wayfinding.Site.Components.Extensions
@using TP.Wayfinding.Site.Models.Floor

@model CreateFloorModel

<form action="#" method="post" class="form-horizontal form-validate" role="form">
    <section class="panel col-lg-12">
        <header class="panel-heading">Create Floor</header>
        <div class="panel-body">
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.BuildingId, new { data_bind = "value: data.buildingId" })
            <div class="form-group">
                @Html.LabelFor(m => m.Floor, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Floor, new { @class = "form-control", data_bind = "value: data.floor, css: { error: typeof(errors.floor()) !== 'undefined' }" })
                    @Html.WayfindingValidationMessageFor(m => m.Floor, new { @data_bind = "text: errors.floor" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control", data_bind = "value: data.description, css: { error: typeof(errors.description()) !== 'undefined' }" })
                    @Html.WayfindingValidationMessageFor(m => m.Description, new { @data_bind = "text: errors.description" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ImagePath, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ImagePath, new { @class = "form-control", data_bind = "value: data.imagePath, css: { error: typeof(errors.imagePath()) !== 'undefined' }" })
                    @Html.WayfindingValidationMessageFor(m => m.ImagePath, new { @data_bind = "text: errors.imagePath" })
                </div>
            </div>
             <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <a href="@Url.Action("Index", new { buildingId = Model.BuildingId })" class="btn btn-default">Cancel</a>
                    <button type="submit" class="btn btn-primary" data-bind="click: save">Save</button>
                </div>
            </div>
        </div>
    </section>
</form>