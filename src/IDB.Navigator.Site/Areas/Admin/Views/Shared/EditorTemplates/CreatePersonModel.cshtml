@using IDB.Navigator.Resources
@using IDB.Navigator.Site.Components.Extensions
@using IDB.Navigator.Site.Areas.Admin.Models.Person

@model CreatePersonModel

<form action="#" method="post" class="form-horizontal form-validate" role="form" data-bind="submit: save">
    <section class="panel col-lg-12">
        <header class="panel-heading">Create Person</header>
        <div class="panel-body">
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                @Html.LabelFor(m => m.AccountName, PropertyNames.AccountName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.AccountName, new { @class = "form-control", data_bind = "value: data.accountName, css: { error: typeof(errors.accountName()) !== 'undefined' }" })
                    @Html.NavigatorValidationMessageFor(m => m.AccountName, new { @data_bind = "text: errors.accountName" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", data_bind = "value: data.firstName, css: { error: typeof(errors.firstName()) !== 'undefined' }" })
                    @Html.NavigatorValidationMessageFor(m => m.FirstName, new { @data_bind = "text: errors.firstName" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new {@class = "col-sm-2 control-label"})
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.LastName, new {@class = "form-control", data_bind = "value: data.lastName, css: { error: typeof(errors.lastName()) !== 'undefined' }"})
                    @Html.NavigatorValidationMessageFor(m => m.LastName, new {@data_bind = "text: errors.lastName"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DisplayName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control", data_bind = "value: data.displayName, css: { error: typeof(errors.displayName()) !== 'undefined' }" })
                    @Html.NavigatorValidationMessageFor(m => m.DisplayName, new { @data_bind = "text: errors.displayName" })
                </div>
            </div>
            
            <div class="form-group">
                <label class="col-sm-2 control-label">Building</label>
                <div class="col-sm-10">
                    <select class="form-control" data-bind="options: buildings, optionsValue: 'id', optionsText: 'name', value: buildingId, optionsCaption: 'Select a Building...'"></select>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.MarkerId, "Office", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    <input id="MarkerId" name="MarkerId" data-bind="value: data.markerId" type="hidden" class="form-control"/>
                    @Html.NavigatorValidationMessageFor(m => m.MarkerId, new { @data_bind = "text: errors.markerId" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", data_bind = "value: data.phoneNumber, css: { error: typeof(errors.phoneNumber()) !== 'undefined' }" })
                    @Html.NavigatorValidationMessageFor(m => m.PhoneNumber, new { @data_bind = "text: errors.phoneNumber" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Department, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Department, new { @class = "form-control", data_bind = "value: data.department, css: { error: typeof(errors.department()) !== 'undefined' }" })
                    @Html.NavigatorValidationMessageFor(m => m.Department, new { @data_bind = "text: errors.department" })
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(m => m.Division, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Division, new { @class = "form-control", data_bind = "value: data.division, css: { error: typeof(errors.division()) !== 'undefined' }" })
                    @Html.NavigatorValidationMessageFor(m => m.Division, new { @data_bind = "text: errors.division" })
                </div>
            </div>
            
             <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </section>
</form>


